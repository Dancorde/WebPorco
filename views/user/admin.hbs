<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Página de Administração</h1>
    <br>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <h4>Produtos</h4>
      </div>
      <div class="col-md-6 text-right">
        <a class="btn btn-primary" href="/user/product/new">Novo Produto</a>
      </div>
    </div>
    <div class="">
      <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th style="width: 12%"></th>
            <th>Produto</th>
            <th class="text-center">Preço</th>
            <th class="text-center">Quantidade</th>
            <th class="text-center">Vendido</th>
          </tr>
        </thead>
        <tbody>
          {{# each products }}
          <tr>
            <td>
              <a href="/user/product/{{this._id}}/edit"><i class="fa fa-edit" aria-hidden="true"></i></a>
              <a href="/product/{{this._id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
            <td>{{this.name}}</td>
            <td class="text-center">R${{this.price}}</td>
            <td class="text-center">{{this.stored}}</td>
            <td class="text-center">{{this.sold}}</td>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <h4>Serviços</h4>
      </div>
      <div class="col-md-6 text-right">
        <a class="btn btn-primary" href="/user/service/new">Novo Serviço</a>
      </div>
    </div>
    <div class="">
      <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th style="width: 12%"></th>
            <th>Serviço</th>
            <th>Descrição</th>
            <th class="text-center">Valor</th>
          </tr>
        </thead>
        <tbody>
          {{# each serviceTypes }}
          <tr>
            <td>
              <a href="/user/service/{{this._id}}/edit"><i class="fa fa-edit" aria-hidden="true"></i></a>
              <a href="#"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td class="text-center">R${{this.price}}</td>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
