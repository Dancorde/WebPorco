<div class="row justify-content-center align-items-center">
  <div class="col-md-4 col-offset-4">
    <h1>Adicionar Produto</h1>
    <form action="/user/product/new" method="post">

      <div class="form-group">
        <label for="productName">Nome do Produto</label>
        <input type="text" id="productName" name="productName" class="form-control">
      </div>

      <div class="form-group">
        <label for="productDesc">Descrição do Produto</label>
        <input type="text" id="productDesc" name="productDesc" class="form-control">
      </div>

      <div class="form-group">
        <label for="productPrice">Valor do Produto</label>
        <input type="number" id="productPrice" name="productPrice" class="form-control">
      </div>

      <div class="form-group">
        <label for="productStored">Quantidade do Produto</label>
        <input type="number" id="productStored" name="productStored" class="form-control">
      </div>

      <div class="form-group">
        <label for="productImage">Imagem do produto (url)</label>
        <input type="url" id="productImage" name="productImage" class="form-control">
      </div>

      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      <button id="btn-checkout" type="submit" class="btn btn-primary" data-toggle="modal">Salvar</button>
      <a href="/user/profile" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>
